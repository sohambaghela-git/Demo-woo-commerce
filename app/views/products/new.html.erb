<div class="container">
	<h1 style="text-align:center"> Add Your Product</h1><br>
	<%= form_with model: [:user,@product] do |form| %>
	<div class="card">
    <% if flash[:notice] %>
        <p><%= flash[:notice] %></p>
    <% end %>
 		<div class="card-body">
      <div class="mb-3">
        <%= form.label :name, { class: "form-label"}  %><br>
        <%= form.text_field :name, { class: "form-control", placeholder: "Enter Product Name" } %><br>
        <%
=begin%>
 <% product.errors.full_messages_for(:name).each do |message| %>
          <div><%= message %></div>
        <% end %> 
<%
=end%>
      </div>
      <div class="mb-3">
        <%= form.label :detail, { class: "form-label"}  %><br>
        <%= form.text_field :detail, { class: "form-control", placeholder: "Enter Product Detail " } %><br>
        <%
=begin%>
 <% product.errors.full_messages_for(:detail).each do |message| %>
          <div><%= message %></div>
        <% end %> 
<%
=end%>
      </div>
      <div class="mb-3">
        <%= form.label :price, { class: "form-label"}  %><br>
        <%= form.number_field :price, { class: "form-control", placeholder: "Enter Product Price" }  %><br>
        <%
=begin%>
 <% product.errors.full_messages_for(:price).each do |message| %>
          <div><%= message %></div>
        <% end %> 
<%
=end%>
      </div>
      <div class="mb-3">
        <%= form.label :product_image, { class: "form-label"}  %><br>
        <%= form.file_field :product_image %>
      </div>

      <div class="mb-3"><br>
        <%= form.submit "Add Product", { class: "btn btn-primary" }  %>
      </div>
    <% end %>
    </div>
  </div>
</div>