<div class="container" style="height:870px;">
	<div>
    <h1 style="text-align:center">Welcome <%= @user_detail.role %> to Woo-commerce </h1>
		<h2 style="text-align:center">This is My Product </h2>
		<div class=row>
			<div class="col-1"></div>
			<div class="col-3">
				<h3>	
				<%=  link_to "new", new_user_product_path %>
				</h3>
			</div>
			<div class="col-6"></div>
			<div class="col-2">
				<h3><%= link_to 'Logout', '/logout', :data => { :confirm => 'Are you sure?' }%></h3>
			</div>
		</div>
		<hr>
	</div>
	<% if (@products.length).eql?(1) %>
		<div class="row">
			<div class="col-4"></div>
			<div class="col-4" style="margin-left:7%; margin-bottom:2.5%; margin-top:2.5%;">
				<h2><%= @products[0].pname %></h2>
				<h5><%= @products[0].pdetail %> </h5>
				<h5><%= @products[0].price %>/-</h5>
				<h6>
					<%= link_to "Update", edit_user_product_path(@user, @products)  %>
				</h6>
			</div>
			<div class="col-4"></div>
		</div>
	<% elsif (@products.length > 1) %>
		<div class="row">
			<% @products.each do | product| %>
				<div class="col-3" style="margin-left:7%; margin-bottom:2.5%; margin-top:2.5%;">
					<h4><%= product.pname %></h4>
					<p><%= product.pdetail %> </p>
					<b><%= product.price %>/-</b>
					<h6>
						<%= link_to "Update", edit_user_product_path(@user, product)  %>
					</h6>
				</div>
			<% end %>
		</div>
	<% end %>
</div>
