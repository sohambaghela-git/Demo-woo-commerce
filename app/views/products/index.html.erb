<div class="container" style="height:870px; border:1px solid #800000; color:#800080;">
	<div>
    <h1 style="text-align:center">Welcome <%= @user_detail.name %> to Woo-commerce </h1>
		<h2 style="text-align:center">This is All Products</h2>
		<div class=row>
			<div class="col-11"></div>
			<div class="col-1">
				<h4>	
				<%=  link_to "new", new_user_product_path %>
				</h4>
			</div>
		</div>
		<hr>
	</div>
	<div class="row">
		<% @products.each do |product| %>
			<div class="col-3" style="margin-left:7%; margin-bottom:2.5%; margin-top:2.5%;">
				<h4><%= link_to product.pname, user_product_path(@user, product) %></h4>
				<p><%= product.pdetail %> </p>
				<b><%= product.price %>/-</b>
			</div>
		<% end %>
	</div>
</div>
