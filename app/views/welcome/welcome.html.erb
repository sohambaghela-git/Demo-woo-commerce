<div class="container">
	<div>
		<h1 style="text-align:center;"> Welcome to Woo-commerce <h1>
		<hr>
	</div>
	<div class="row" style="text-align:center">
	<% if flash[:notice] %>
			<div class="message"><p><%= flash[:notice] %></p></div>
  	<% end %>
	</div>
	<div> 
<% if current_user %>
		<div class="row">
    	<div class="col-1"></div>
			<% if current_user.role == "admin" %>
				<h4 class="col-4">	
				<%=  link_to "new", new_user_product_path(current_user.id) %>
				</h4>
				<h4 class="col-4">	
					<%=  link_to "My Products", user_products_path(current_user.id) %>
				</h4>
				<div class="col-3">
					<h3><%= link_to 'Logout', '/logout', :data => { :confirm => 'Are you sure?' }%></h3>
				</div>
				<hr>
			<% else %>
				<div class="col-4"></div>
				<div class="col-4"></div>
				<div class="col-3">
					<h3><%= link_to 'Logout', '/logout', :data => { :confirm => 'Are you sure?' }%></h3>
				</div>
				<hr>
			<% end %>
		</div>
		<div class="row">
			<% @products.each do |product| %>
				<div class="col-3" style="margin-left:7%; margin-bottom:2.5%; margin-top:2.5%;">
					<h4><%= link_to product.name, user_product_path(user_id:current_user.id,id: product.id) %></h4>
					<p><%= product.detail %> </p>
					<b><%= product.price %>/-</b>
				</div>
			<% end %>
		</div>
	</div>
	<div>
<% else %>
		<div style="text-align:center;">
			<h2><%= link_to 'Signup', '/signup'%></h2>
    	<h2><%= link_to 'Login', '/login'%></h2>
		</div>
		<div class="row">
		<% @products.each do |product| %>
			<div class="col-3" style="margin-left:7%; margin-bottom:2.5%; margin-top:2.5%;">
				<h4><%= product.name %></h4>
				<p><%= product.detail %> </p>
				<b><%= product.price %>/-</b>
			</div>
		<% end %>
		</div>
		<div class="container mt-5" style="text-align:center">
    <h3>You can Buy and Sale Products here</h3><br>
  	</div>
  	<div class="container mt-5">
      <div class="row">
          <div class="col-sm-6"><h3>As a Admin</h3></div>
          <div class="col-sm-6">
            <h5>Admin</h5>
            <ul class="list-group">
              <li class="list-group-item">Admin can add Products</li>
              <li class="list-group-item">Admin can manage Products</li>
              <li class="list-group-item">Admin can change Products</li>
              <li class="list-group-item">Admin can update Products</li>
              <li class="list-group-item">Admin can not Buy Products</li>
            </ul>
          </div>
      </div>
  	</div>
  	<div class="container mt-5">
    	<div class="row">
      	<div class="col-sm-6"><h3>As a Customer</h3></div>
      	<div class="col-sm-6">
        	<h5>Customer</h5>
        	<ul class="list-group">
          	<li class="list-group-item">User can See All Products</li>
          	<li class="list-group-item">User can See All detail of Product</li>
          	<li class="list-group-item">User can Buy Product</li>
          	<li class="list-group-item">User see his/her parchased list</li>
          	<li class="list-group-item">User can not Add Products</li>
        	</ul>
      	</div>
    	</div>
  	</div>
<% end %>
	</div>
</div>